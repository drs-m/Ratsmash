/* login form starts */

#login_bg{
	position: fixed;
	top: 50%;
	left: 50%;
	margin-top: -17%;
	margin-left: -30%;
	width: 60%;
	z-index: 1;
	min-height: 400px;
}
#login{
	position: fixed;
	top: 50%;
	left: 50%;
	margin-top: -17%;
	margin-left: -30%;
	width: 60%;
	height: 70%;
	z-index: 2;
}
#login img{
	width: 30%;
	margin-left: 33%;
	margin-top: 7%;
}
#login h1{
	margin-top: 3%;
	font-size: 200%;
}
#login form{
	width: 60%;
	margin-left: 20%;
	margin-top: 3%;
}
#login form #email{
	width: 100%;
	height: 25px;
	border-radius: 5px;
	font-size: 16px;
}
#login form #password_wrapper{
	width: 100%;
}
#login form #password_wrapper #password{
	width: 88%;
	height: 25px;
	border-radius: 5px 0px 0px 5px;
	font-size: 16px;
	float: left;
	border-right: none;
	margin-top: 2%;
}
#login form #password_wrapper #reset_password{
	text-align: center;
	display: block;
	padding-top: 0;
	color: black;
	text-decoration: none;
	font-size: 25px;
	font-weight: bold;
	margin-top: 2%;
	width: 10%;
	height: 32px;
	float: left;
	border-radius: 0px 5px 5px 0px;
	background-attachment: fixed;
	background: #98d8f2; /* Old browsers */
	background: -moz-linear-gradient(45deg, #98d8f2 0%, #60abf8 66%, #4096ee 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left bottom, right top, color-stop(0%,#98d8f2), color-stop(66%,#60abf8), color-stop(100%,#4096ee)); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(45deg, #98d8f2 0%,#60abf8 66%,#4096ee 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(45deg, #98d8f2 0%,#60abf8 66%,#4096ee 100%); /* Opera 11.10+ */
	background: -ms-linear-gradient(45deg, #98d8f2 0%,#60abf8 66%,#4096ee 100%); /* IE10+ */
	background: linear-gradient(45deg, #98d8f2 0%,#60abf8 66%,#4096ee 100%); /* W3C */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#98d8f2', endColorstr='#4096ee',GradientType=1 ); /* IE6-9 fallback on horizontal gradient */
}
#login form #password_wrapper #reset_password:hover{
	box-shadow: 1px 1px 1px;
}
#login form #buttons_wrapper{
	width: 100%;
}
#login form #buttons_wrapper #persist_label{
	display: block;
	float: left;
	font-weight: bold;
	font-size: 16px;
	margin-top: 3%;
}
#login form #buttons_wrapper #persist_label input{
	width: 20px;
	height: 20px;
}
#login form #buttons_wrapper #send_login{
	display: block;
	float: right;
	background-attachment: fixed;
	background: #98d8f2; /* Old browsers */
	background: -moz-linear-gradient(45deg, #98d8f2 0%, #60abf8 66%, #4096ee 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left bottom, right top, color-stop(0%,#98d8f2), color-stop(66%,#60abf8), color-stop(100%,#4096ee)); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(45deg, #98d8f2 0%,#60abf8 66%,#4096ee 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(45deg, #98d8f2 0%,#60abf8 66%,#4096ee 100%); /* Opera 11.10+ */
	background: -ms-linear-gradient(45deg, #98d8f2 0%,#60abf8 66%,#4096ee 100%); /* IE10+ */
	background: linear-gradient(45deg, #98d8f2 0%,#60abf8 66%,#4096ee 100%); /* W3C */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#98d8f2', endColorstr='#4096ee',GradientType=1 ); /* IE6-9 fallback on horizontal gradient */
	border: none;
	padding: 5px 10px;
	color: black;
	font-weight: bold;
	font-size: 16px;
	border-radius: 5px;
	margin-top: 3%;
}
#login form #buttons_wrapper #send_login:hover{
	box-shadow: 1px 1px 1px;
}

/* login form ends */

#footer{
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 30px;
	background: rgba(255,255,255,1);
	box-shadow: 1px -1px 2px 1px gray;
}
#footer p{
	color: gray;
	float: left;
	margin-top: 2px;
	margin-left: 20px;
}
#footer ul{
	width: 80%;
	margin: 0 auto;
}
#footer ul li{
	float: right;
	height: 30px;
	padding-right: 10px;
}
#footer ul li a{
	padding-left: 10px;
	font-size: 16px;
	display: block;
	height: 28px;
	padding-top: 2px;
	color: gray;
	text-decoration: none;
	background: white; /* Old browsers */
	background: -moz-linear-gradient(45deg, #98d8f2 0%, #60abf8 66%, #4096ee 100%); /* FF3.6+ */
