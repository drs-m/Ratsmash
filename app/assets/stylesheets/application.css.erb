	background: -ms-linear-gradient(45deg, #98d8f2 0%,#60abf8 66%,#4096ee 100%); /* IE10+ */
	background: linear-gradient(45deg, #98d8f2 0%,#60abf8 66%,#4096ee 100%); /* W3C */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#98d8f2', endColorstr='#4096ee',GradientType=1 ); /* IE6-9 fallback on horizontal gradient */
	background-position: center left;
	background-repeat: no-repeat;
	background-size: 1px 20px;
	width: 100%;
}
#footer ul li a:hover{
	color: black;
}

td span.symbol {
	font-size: 140%;
	text-align: center;
}

td span.symbol.inactive {
	font-size: 200%;
}

#login span#error-msg {
	color: red;
	display: none;
	margin-left:20%;
}

@media only screen and (max-width: 860px){
	#menue ul{
		display: none;
	}
	#little_menue_button{
		display: block;
	}
	#login form #buttons_wrapper #persist_label{
		margin-top: 5%;
		float: none;
	}
	#login form #buttons_wrapper #persist_label input{
		margin-top: 5%;
	}
	#login form #buttons_wrapper #send_login{
		float: none;
	}
	#login form #password_wrapper #password{
		margin-top: 5%;
	}
	#login form #password_wrapper #reset_password{
		margin-top: 5%;
	}
}
@media only screen and (max-width: 480px){
	#login{
		top:50%;
		left: 50%;
		margin-left: -160px;
		margin-top: -170px;
		width: 320px;
		height: 340px;
		border-radius: 10px;
		background: white;
		box-shadow: 1px 1px 2px 1px gray;
	}
	#login img{
		margin-left: 25%;
		width: 50%;
	}
	#login form #buttons_wrapper{
		clear: both;
	}
	#login form #buttons_wrapper #persist_label{
		margin-top: 5%;
		float: none;
	}
	#login form #buttons_wrapper #persist_label input{
		margin-top: 5%;
	}
	#login form #buttons_wrapper #send_login{
		float: none;
	}
	#login form #password_wrapper #password{
		margin-top: 5%;
	}
	#login form #password_wrapper #reset_password{
		margin-top: 5%;
	}
}