<h1>Beschreibungen</h1>
<h2>Beschreibungen über mich</h2>
<table>
	<tr>
		<td>Von</td>
		<td>Inhalt</td>
		<td>Zusätzliche Autoren</td>
		<td>Erstellt am</td>
		<td>Bearbeitet am</td>
		<td>Aktionen</td>
	</tr>
	<% @descriptions_for_me.each do |description| %>
		<tr>
			<td><%= Student.find_by_id(description.from_id).name %></td>
			<td><%= description.content %></td>
			<td><%= description.additional_authors %></td>
			<td><%= description.created_at %></td>
			<td><%= description.updated_at %></td>
			<td><%= link_to "Löschen", description_path(description.id), :method => :delete, :confirm => "Wirklich löschen?" %></td>
		</tr>
	<% end %>
</table>
<%= link_to "Beschreibung erstellen", new_description_path %>