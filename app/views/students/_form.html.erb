<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= @student.errors.count %> Fehler sind aufgetreten:</h2>
      <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :gender, "Geschlecht" %><br>
    männlich: <%= f.radio_button :gender, "m", checked: @student.gender %> weiblich: <%= f.radio_button :gender, "w", checked: (!@student.gender and !@student.gender.nil?) %>
  </div>
  <div class="field">
    <%= f.label :mail_address, "E-Mail Adresse" %><br>
    <%= f.text_field :mail_address %>
  </div>
  <div class="field">
    <%= f.label :password, "Neues Passwort" %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :admin_permissions, "Admin-Rechte" %>
    <%= f.check_box :admin_permissions %>
  </div>
  <div class="field">
    <%= f.label :closed, "Gesperrt" %>
    <%= f.check_box :closed %>
  </div>
  <div class="actions">
    <%= f.submit "Bestätigen" %>
  </div>
<% end %>
