<h1>Login</h1>
<% flash.each do |name,message| %>
	<div id="flash_<%= name %>">
		<%= message %>
	</div>
	<br />
<% end %>

<%= form_tag do %>
	<%= text_field_tag :email %><br />
	<%= password_field_tag :password %><br />
	<%= submit_tag("Einloggen") %>
<% end %>

<%= link_to "Instant Login", controller: "session", action: "instantlogin" %>